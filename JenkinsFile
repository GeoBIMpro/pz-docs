@Library('pipelib@master') _

node {

  stage('Setup') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/pz-docs',
      branch: "master"
    ])
  }

  stage('Archive') {
    withRvm(rubyVersion: '2.4.0') {
      sh """
        ./ci/archive.sh
      """
    }
    mavenPush()
  }

  stage ('CI Deploy') {
    cfPush()
    cfBgDeploy()
  }

  stage ('Integration Testing') {
    postman()
  }

  stage('Reset') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/pz-docs',
      branch: "master"
    ])
  }

  stage('Staging Deploy') {
    cfPush {
      cfDomain  = 'stage.geointservices.io'
      cfSpace   = 'stage'
    }
    cfBgDeploy {
      cfDomain  = 'stage.geointservices.io'
      cfSpace   = 'stage'
    }
  }

  stage ('Cleanup') {
    deleteDir()
  }
}
